\begin_layout Standard
;
 and the basic tool is the Geometric Progression.
 Let 
\begin_inset Formula $\alpha$
\end_inset

 be the first age of adulthood,
 and assume that survival continues "forever" so that we can use infinite sums (and so we can avoid several other inconveniences in the CKMR equations that would require an explicit representation of age structure).
 Writing 
\begin_inset Formula $\phi_{a}=\Phi\left(1,a\right)$
\end_inset

 for one-year survival,
 we have
\begin_inset Formula 
\begin{gather}
N\left(y+1,a+1\right)=\phi_{a}N\left(y,a\right)\,\,\forall\,y,a\text{ [survival]}\nonumber \\
N\left(y+1,a\right)=\rho N\left(y,a\right)\,\,\forall\,y,a\text{ [increase/decrease at rate \ensuremath{\rho}]}\nonumber \\
\implies N\left(y,a+1\right)=\phi_{a}N\left(y-1,a\right)=\frac{\phi_{a}}{\rho}N\left(y,a\right)\nonumber \\
\implies N\left(y,a+t\right)=\left(\frac{\phi_{a}}{\rho}\right)^{t}N\left(y,a\right)\text{ if \ensuremath{\phi}is constant between \ensuremath{a} and \ensuremath{a+t-1} }\nonumber \\
\implies N\left(y\right)=\sum_{a\geqslant\alpha}N\left(y,\alpha\right)\left(\frac{\phi_{A}}{\rho}\right)^{a-\alpha}=\frac{N\left(y,\alpha\right)}{1-\phi_{A}/\rho}\text{ [total adult abundance relative to new incoming adults] }\nonumber \\
\implies N\left(y,\alpha\right)=\left(1-\phi_{A}/\rho\right)\times N\left(y\right)\nonumber \\
\implies N\left(y-1,\alpha-1\right)\ensuremath{\phi_{J}=}\left(1-\phi_{A}/\rho\right)\times N\left(y\right)\text{ [same cohort one year earlier]}\nonumber \\
\implies N\left(y,\alpha-1\right)=\phi_{J}^{-1}\left(1-\phi_{A}/\rho\right)N\left(y+1\right)\nonumber \\
=\left(\rho\phi_{J}\right)^{-1}\left(1-\phi_{A}/\rho\right)N\left(y\right)\nonumber \\
\implies N\left(y,1\right)=\left(\frac{\phi_{J}}{\rho}\right)^{-\left(\left(\alpha-1\right)-1\right)}\left(\rho\phi_{J}\right)^{-1}\left(1-\phi_{A}/\rho\right)N\left(y\right)\text{ in terms of new post-calves}\nonumber \\
\implies N\left(J,y\right)=\sum_{a=1}^{\alpha-1}N\left(y,1\right)\left(\frac{\phi_{J}}{\rho}\right)^{a-1}\nonumber \\
=\frac{N\left(y,1\right)}{1-\phi_{J}/\rho}\left(1-\left(\frac{\phi_{J}}{\rho}\right)^{\alpha-1}\right)\text{ [finite geometric progression]}\nonumber \\
\implies N\left(J,y\right)=N_{A}\left(y\right)\times\nonumber \\
\left(1-\frac{\phi_{J}}{\rho}\right)^{-1}\left(1-\left(\frac{\phi_{J}}{\rho}\right)^{\alpha-1}\right)\left(\frac{\phi_{J}}{\rho}\right)^{2-\alpha}\left(\rho\phi_{J}\right)^{-1}\left(1-\frac{\phi_{A}}{\rho}\right)\label{eq:gp-phew}
\end{gather}

